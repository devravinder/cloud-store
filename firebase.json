{
  "functions": [
    {
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm run prestart:firebase"
      ],
      "source": "firebase-src"
    }
  ],
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "function": "webApi" 
      }
    ]
  },
  "emulators": {
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "functions": {
      "port": 3000
    }
  }
}
