{
  "name": "cloud-store",
  "version": "1.0.0",
  "description": "",
  "main": "dist/start.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "dev": "tsx --no-warnings --env-file=.env --watch src/start.ts",
    "start": "node --no-warnings --env-file=.env dist/start.js",
    "firebase:build": "rm -rf firebase-src && npm run build && cp package.json firebase-src/ && cp -r dist firebase-src/ && cp -r public firebase-src/ && cp .env firebase-src/",
    "e:serve": "npm run build && firebase emulators:start --only firebase-src",
    "e:shell": "npm run build && firebase firebase-src:shell",
    "e:start": "npm run shell",
    "e:deploy": "firebase deploy --only firebase-src",
    "e:logs": "firebase firebase-src:log"
  },
  "directories": {
        "serve": "public"
    },
  "files": ["public","dist", "dist/start.js"],
  "engines": {
    "node": "24"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.0",
    "firebase-firebase-src": "^7.0.2",
    "multer": "^2.0.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.26.2"
}
